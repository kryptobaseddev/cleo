{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.delete request",
  "description": "Delete task",
  "type": "object",
  "properties": {
    "taskId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Task ID to delete"
    },
    "force": {
      "type": "boolean",
      "default": false,
      "description": "Force delete with children/dependencies"
    }
  },
  "required": ["taskId"],
  "additionalProperties": false
}
