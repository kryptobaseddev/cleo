{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "research.query request",
  "description": "Search research",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "minLength": 1,
      "description": "Search query"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Minimum confidence score"
    }
  },
  "required": ["query"],
  "additionalProperties": false
}
