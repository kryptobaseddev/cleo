{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "claude-todo-qa-log-schema-v1.0",
  "title": "CLEO QA Log Schema",
  "description": "Append-only log of questions, answers, and knowledge captured from GitHub issues, discussions, and support interactions. Used for FAQ generation and knowledge retention.",
  "type": "object",
  "required": ["version", "project", "entries", "_meta"],
  "additionalProperties": false,

  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version."
    },
    "project": {
      "type": "string",
      "description": "Project identifier. Must match todo.json."
    },
    "_meta": {
      "type": "object",
      "required": ["totalEntries", "firstEntry", "lastEntry"],
      "additionalProperties": false,
      "properties": {
        "formatVersion": {
          "type": "string",
          "pattern": "^\\d+$",
          "default": "1",
          "description": "QA log format version."
        },
        "totalEntries": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of QA entries."
        },
        "firstEntry": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Timestamp of first entry."
        },
        "lastEntry": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Timestamp of most recent entry."
        }
      }
    },
    "entries": {
      "type": "array",
      "description": "Chronological, append-only QA entries.",
      "items": {
        "type": "object",
        "required": ["id", "timestamp", "question", "answer", "source", "tags"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^qa_[a-f0-9]{12}$",
            "description": "Unique QA entry identifier."
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When the QA entry was recorded."
          },
          "question": {
            "type": "string",
            "minLength": 1,
            "description": "The question asked."
          },
          "answer": {
            "type": "string",
            "minLength": 1,
            "description": "The answer provided."
          },
          "source": {
            "type": "object",
            "required": ["type"],
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["github-issue", "github-discussion", "cli-support", "internal", "documentation"],
                "description": "Where the question originated."
              },
              "ref": {
                "type": ["string", "null"],
                "description": "Reference identifier (e.g., GH#19, discussion URL)."
              },
              "url": {
                "type": ["string", "null"],
                "format": "uri",
                "description": "Direct URL to the source."
              }
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Categorization tags for filtering and FAQ generation."
          },
          "taskId": {
            "type": ["string", "null"],
            "pattern": "^T\\d{3,}$",
            "description": "Related CLEO task ID if applicable."
          },
          "actor": {
            "type": "string",
            "enum": ["human", "claude", "system"],
            "description": "Who answered the question."
          },
          "sessionId": {
            "type": ["string", "null"],
            "description": "Session in which the QA was recorded."
          },
          "relatedIssues": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Related GitHub issue numbers or task IDs."
          }
        }
      }
    }
  }
}
