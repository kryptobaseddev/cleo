{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.tree request",
  "description": "Hierarchical task view",
  "type": "object",
  "properties": {
    "rootId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Root task ID (default: all epics)"
    },
    "depth": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3,
      "default": 3,
      "description": "Maximum depth to traverse"
    }
  },
  "additionalProperties": false
}
