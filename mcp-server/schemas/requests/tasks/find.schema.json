{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.find request",
  "description": "Fuzzy search tasks (minimal fields)",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "minLength": 1,
      "description": "Search query"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 20,
      "description": "Maximum results"
    }
  },
  "required": ["query"],
  "additionalProperties": false
}
