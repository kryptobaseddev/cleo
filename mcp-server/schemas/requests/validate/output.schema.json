{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "validate.output request",
  "description": "Output file validation",
  "type": "object",
  "properties": {
    "taskId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Task ID"
    },
    "filePath": {
      "type": "string",
      "description": "Output file path"
    }
  },
  "required": ["taskId", "filePath"],
  "additionalProperties": false
}
