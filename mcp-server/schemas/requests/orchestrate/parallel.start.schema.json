{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "orchestrate.parallel.start request",
  "description": "Start parallel wave",
  "type": "object",
  "properties": {
    "epicId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Epic ID"
    },
    "wave": {
      "type": "integer",
      "minimum": 0,
      "description": "Wave number"
    }
  },
  "required": ["epicId", "wave"],
  "additionalProperties": false
}
