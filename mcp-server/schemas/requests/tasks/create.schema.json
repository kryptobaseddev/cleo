{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.create request",
  "description": "Create new task",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100,
      "description": "Task title"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 1000,
      "description": "Task description (must differ from title)"
    },
    "parent": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Parent task ID"
    },
    "depends": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^T[0-9]+$"
      },
      "description": "Dependency task IDs"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium",
      "description": "Priority level"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Category labels"
    }
  },
  "required": ["title", "description"],
  "additionalProperties": false
}
