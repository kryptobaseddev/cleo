{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.reparent request",
  "description": "Change task parent",
  "type": "object",
  "properties": {
    "taskId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Task ID to reparent"
    },
    "newParent": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "New parent task ID"
    }
  },
  "required": ["taskId", "newParent"],
  "additionalProperties": false
}
