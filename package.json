{
  "name": "@cleocode/cleo",
  "version": "2026.2.5",
  "description": "CLEO V2 - TypeScript task management CLI for AI coding agents",
  "mcpName": "io.github.kryptobaseddev/cleo-mcp-server",
  "type": "module",
  "main": "dist/cli/index.js",
  "exports": {
    ".": "./dist/cli/index.js",
    "./mcp": "./dist/mcp/index.js"
  },
  "bin": {
    "cleo": "dist/cli/index.js",
    "ct": "dist/cli/index.js",
    "cleo-mcp": "dist/mcp/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kryptobaseddev/cleo.git"
  },
  "homepage": "https://github.com/kryptobaseddev/cleo",
  "scripts": {
    "build": "node build.mjs",
    "build:check": "tsc --noEmit",
    "dev": "tsc --noEmit --watch",
    "dev:setup": "bash dev/setup-ts-dev.sh",
    "dev:watch": "node build.mjs --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "migrate:todos": "node dist/scripts/migrate-todo-to-tasks.js",
    "cleo:update-status": "node dist/scripts/update-task-status.js"
  },
  "engines": {
    "node": ">=24.13.1"
  },
  "keywords": [
    "cleo",
    "task-management",
    "ai-agents",
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "cli",
    "claude-code"
  ],
  "author": "CLEO Development Team",
  "license": "MIT",
  "files": [
    "dist",
    "drizzle",
    "packages/ct-skills",
    "schemas",
    "templates",
    "skills",
    "completions",
    "server.json"
  ],
  "dependencies": {
    "@cleocode/caamp": "^1.1.3",
    "@cleocode/lafs-protocol": "^1.4.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "drizzle-orm": "^1.0.0-beta.15",
    "pino": "^10.3.1",
    "pino-roll": "^4.0.0",
    "proper-lockfile": "^4.1.2",
    "write-file-atomic": "^6.0.0",
    "yaml": "^2.8.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^22.19.11",
    "@types/proper-lockfile": "^4.1.4",
    "@types/write-file-atomic": "^4.0.3",
    "drizzle-kit": "^1.0.0-beta.15",
    "esbuild": "^0.24.2",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
