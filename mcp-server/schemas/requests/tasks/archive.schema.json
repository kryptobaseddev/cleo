{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.archive request",
  "description": "Archive done tasks",
  "type": "object",
  "properties": {
    "taskId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Specific task ID to archive (default: all done)"
    },
    "before": {
      "type": "string",
      "format": "date",
      "description": "Archive tasks completed before this date"
    }
  },
  "additionalProperties": false
}
