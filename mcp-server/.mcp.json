{
  "$schema": "https://modelcontextprotocol.io/schemas/server-manifest.json",
  "name": "cleo-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for CLEO task management system. Exposes 98 operations across 8 domains through 2 gateway tools using CQRS pattern.",
  "author": "CLEO Development Team",
  "license": "MIT",
  "homepage": "https://github.com/cyanheads/cleo",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyanheads/cleo.git",
    "directory": "mcp-server"
  },
  "runtime": "node",
  "command": {
    "node": {
      "executable": "node",
      "args": ["dist/index.js"]
    }
  },
  "transport": {
    "stdio": {}
  },
  "capabilities": {
    "tools": {
      "list": true,
      "call": true
    }
  },
  "tools": [
    {
      "name": "cleo_query",
      "description": "Read operations for CLEO: task discovery, status checks, analysis, validation, compliance metrics. Never modifies state.",
      "operations": 45,
      "domains": [
        "tasks",
        "session",
        "orchestrate",
        "research",
        "lifecycle",
        "validate",
        "system"
      ]
    },
    {
      "name": "cleo_mutate",
      "description": "Write operations for CLEO: create/update/complete tasks, manage sessions, spawn agents, progress lifecycle, execute releases. Modifies state with validation.",
      "operations": 53,
      "domains": [
        "tasks",
        "session",
        "orchestrate",
        "research",
        "lifecycle",
        "validate",
        "release",
        "system"
      ]
    }
  ],
  "configuration": {
    "required": [],
    "optional": [
      {
        "name": "cliPath",
        "type": "string",
        "description": "Path to CLEO CLI executable",
        "default": "cleo"
      },
      {
        "name": "timeout",
        "type": "number",
        "description": "Command timeout in milliseconds",
        "default": 30000
      },
      {
        "name": "logLevel",
        "type": "string",
        "enum": ["error", "warn", "info", "debug"],
        "description": "Logging level",
        "default": "info"
      },
      {
        "name": "maxRetries",
        "type": "number",
        "description": "Maximum retry attempts for retryable errors",
        "default": 3
      }
    ]
  },
  "environment": {
    "CLEO_MCP_CLI_PATH": "Path to CLEO CLI (overrides config)",
    "CLEO_MCP_TIMEOUT": "Command timeout in ms (overrides config)",
    "CLEO_MCP_LOG_LEVEL": "Logging level (overrides config)",
    "CLEO_MCP_MAX_RETRIES": "Max retry attempts (overrides config)"
  },
  "requirements": {
    "node": ">=18.0.0",
    "cleo": ">=0.80.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cleo",
    "task-management",
    "ai-agents",
    "orchestration",
    "workflow"
  ],
  "documentation": {
    "specification": "../docs/specs/MCP-SERVER-SPECIFICATION.md",
    "architecture": "../docs/specs/MCP-SERVER-SPECIFICATION.md#2-gateway-tool-definitions",
    "operations": "../docs/specs/MCP-SERVER-SPECIFICATION.md#appendix-a-domain-operation-quick-reference"
  }
}
