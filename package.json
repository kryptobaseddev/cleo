{
  "name": "@cleocode/cleo",
  "version": "2.0.0-alpha.0",
  "description": "CLEO V2 - TypeScript task management CLI for AI coding agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cleo-v2": "dist/cli/index.js"
  },
  "scripts": {
    "build": "node build.mjs",
    "build:check": "tsc --noEmit",
    "dev": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cleo",
    "task-management",
    "ai-agents",
    "cli",
    "claude-code"
  ],
  "author": "CLEO Development Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "proper-lockfile": "^4.1.2",
    "write-file-atomic": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/write-file-atomic": "^4.0.3",
    "esbuild": "^0.24.0",
    "typescript": "^5.5.2",
    "vitest": "^2.1.0"
  }
}
