{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.deps request",
  "description": "Get dependencies",
  "type": "object",
  "properties": {
    "taskId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Task ID"
    },
    "direction": {
      "type": "string",
      "enum": ["upstream", "downstream", "both"],
      "default": "both",
      "description": "Dependency direction"
    }
  },
  "required": ["taskId"],
  "additionalProperties": false
}
