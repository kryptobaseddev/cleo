{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "CLEO Documentation",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373"
  },
  "logo": {
    "light": "/images/logo.png",
    "dark": "/images/logo.png"
  },
  "favicon": "/images/favicon.png",
  "mermaid": {
    "theme": "default"
  },
  "integrations": {
    "plausible": {
      "domain": "cleo.dev"
    }
  },
  "seo": {
    "indexHiddenPages": false,
    "metatags": {
      "og:site_name": "CLEO Documentation",
      "og:type": "website",
      "og:image": "/images/og-image.png",
      "twitter:card": "summary_large_image",
      "twitter:site": "@cleo_dev",
      "robots": "index, follow"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode",
      {
        "title": "Report Issue",
        "description": "Report a documentation issue on GitHub",
        "icon": "bug",
        "href": "https://github.com/kryptobaseddev/cleo/issues/new?template=docs_issue.md"
      }
    ]
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search CLEO docs..."
  },
