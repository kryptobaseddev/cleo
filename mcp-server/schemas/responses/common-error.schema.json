{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Common error response",
  "description": "Base error response structure used by all operations",
  "type": "object",
  "properties": {
    "_meta": {
      "$ref": "../common/meta.schema.json"
    },
    "success": {
      "type": "boolean",
      "const": false
    },
    "error": {
      "$ref": "../common/error.schema.json"
    }
  },
  "required": ["_meta", "success", "error"],
  "additionalProperties": false
}
