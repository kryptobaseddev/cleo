{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.get request",
  "description": "Get single task details by ID",
  "type": "object",
  "properties": {
    "taskId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Task ID (e.g., T2908)"
    }
  },
  "required": ["taskId"],
  "additionalProperties": false
}
