{
  "$schema": "../schemas/config.schema.json",
  "version": "2.3.0",

  "archive": {
    "enabled": true,
    "daysUntilArchive": 7,
    "maxCompletedTasks": 15,
    "preserveRecentCount": 3,
    "archiveOnSessionEnd": true,
    "autoArchiveOnComplete": false
  },

  "logging": {
    "enabled": true,
    "retentionDays": 30,
    "level": "standard",
    "logSessionEvents": true
  },

  "validation": {
    "strictMode": false,
    "checksumEnabled": true,
    "enforceAcceptance": true,
    "requireDescription": false,
    "maxActiveTasks": 1,
    "validateDependencies": true,
    "detectCircularDeps": true
  },

  "defaults": {
    "priority": "medium",
    "phase": "core",
    "labels": []
  },

  "session": {
    "requireSession": true,
    "requireSessionNote": true,
    "requireNotesOnComplete": true,
    "warnOnNoFocus": true,
    "allowNestedSessions": true,
    "allowParallelAgents": true,
    "autoStartSession": true,
    "autoDiscoveryOnStart": true,
    "sessionTimeoutHours": 24
  },

  "multiSession": {
    "enabled": true,
    "maxConcurrentSessions": 5,
    "maxActiveTasksPerScope": 1,
    "scopeValidation": "strict",
    "allowNestedScopes": true,
    "allowScopeOverlap": false
  },

  "display": {
    "showArchiveCount": true,
    "showLogSummary": true,
    "warnStaleDays": 30
  },

  "output": {
    "defaultFormat": "text",
    "showColor": true,
    "showUnicode": true,
    "showProgressBars": true,
    "csvDelimiter": ",",
    "dateFormat": "iso8601",
    "showCompactTitles": false,
    "maxTitleLength": 80
  },

  "cli": {
    "aliases": {
      "ls": "list",
      "done": "complete",
      "new": "add",
      "edit": "update",
      "rm": "archive",
      "check": "validate"
    },
    "plugins": {
      "enabled": true,
      "directories": ["~/.cleo/plugins", "./.cleo/plugins"],
      "autoDiscover": true
    },
    "debug": {
      "enabled": true,
      "validateMappings": true,
      "checksumVerify": true,
      "showTimings": false
    }
  },

  "backup": {
    "enabled": true,
    "directory": ".cleo/backups",
    "maxSnapshots": 10,
    "maxSafetyBackups": 5,
    "maxIncremental": 10,
    "maxArchiveBackups": 3,
    "safetyRetentionDays": 7
  },

  "cancellation": {
    "cascadeConfirmThreshold": 10,
    "requireReason": true,
    "daysUntilArchive": 3,
    "allowCascade": true,
    "defaultChildStrategy": "block"
  }
}
