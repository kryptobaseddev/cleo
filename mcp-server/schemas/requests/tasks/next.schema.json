{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.next request",
  "description": "Next task suggestion",
  "type": "object",
  "properties": {
    "epicId": {
      "type": "string",
      "pattern": "^T[0-9]+$",
      "description": "Epic ID to scope suggestions (default: current session)"
    },
    "count": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 3,
      "description": "Number of suggestions"
    }
  },
  "additionalProperties": false
}
